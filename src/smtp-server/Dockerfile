#
# Build the docker image with `npx nx docker-build smtp-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t smtp-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system smtp-server && \
          adduser --system -G smtp-server smtp-server

COPY dist/src/smtp-server smtp-server
RUN chown -R smtp-server:smtp-server .

CMD [ "node", "smtp-server" ]
