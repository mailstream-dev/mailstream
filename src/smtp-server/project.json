{
  "name": "smtp-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src/smtp-server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/src/smtp-server",
        "format": ["cjs"],
        "main": "src/smtp-server/src/main.ts",
        "tsConfig": "src/smtp-server/tsconfig.app.json",
        "assets": ["src/smtp-server/src/assets"],
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "production": {
          "generateLockfile": true,
          "esbuildOptions": {
            "sourcemap": false
          }
        }
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "smtp-server:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "smtp-server:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["src/smtp-server/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "src/smtp-server/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build -f src/smtp-server/Dockerfile . -t smtp-server"
        ]
      }
    }
  },
  "tags": []
}
